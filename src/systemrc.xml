<?xml version="1.0" ?>
<!-- Copyright 2016 Steve Palmer -->
<emulator xmlns="http://www.srpalmer.me.uk/ns/emulator" version="0.05">

  <ram name="shared_ram">
    <size>0400</size>
  </ram>

  <rom name="Basic">
    <filename>basic.rom</filename>
  </rom>

  <rom name="Kernel">
    <filename>kernel.rom</filename>
  </rom>

  <computer name="atom1">
    <ram name="video">
      <size>0x1800</size>
    </ram>
    <ppia/>
    <address_space>
      <map>
        <base>0x0000</base>
        <ram name="block0">
          <size>0x0400</size>
        </ram>
      </map>
      <map>
        <base>0x3C00</base>
        <rom>
          <content>01</content>
        </rom>
      </map>
      <map>
        <base>0x6000</base>
        <memory name="shared_ram"/>
      </map>
      <map>
        <base>0x8000</base>
        <memory name="video"/>
      </map>
      <map>
        <base>0xB000</base>
        <memory name="ppia"/>
        <size>0400</size>
      </map>
      <map>
        <base>0xC000</base>
        <memory name="Basic"/>
      </map>
      <map>
        <base>0xF000</base>
        <memory name="Kernel"/>
      </map>
    </address_space>
    <mcs6502>
      <memory name="memory"/>
    </mcs6502>
  </computer>

  <computer name="atom2" instantiates="minialrc.xml">
    <address_space>
      <map>
        <base>0x4000</base>
        <memory name="shared_ram"/>
      </map>
      <map>
        <base>0x3C00</base>
        <rom>
          <content>02</content>
        </rom>
      </map>
    </address_space>
  </computer>

  <computer name="atom3" instantiates="nominalrc.xml">
    <address_space>
      <map>
        <base>0x4000</base>
        <memory name="shared_ram"/>
      </map>
      <map>
        <base>0x3C00</base>
        <rom>
          <content>03</content>
        </rom>
      </map>
    </address_space>
  </computer>

  <computer name="atom4" clone="atom3">
    <address_space>
      <map>
        <base>0x3C00</base>
        <rom>
          <content>04</content>
        </rom>
      </map>
    </address_space>
  </computer>

</emulator>
