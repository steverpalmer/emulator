<?xml version="1.0" ?>
<emulator xmlns="http://www.srpalmer.me.uk/ns/emulator" version="0.05">

  <ram name="shared_ram">
    <size>0400</size>
  </ram>

  <rom name="Basic">
    <filename>basic.rom</filename>
  </rom>

  <rom name="Kernel">
    <filename>kernel.rom</filename>
  </rom>

  <computer name="atom1">
    <ram name="video">
      <size>1800</size>
    </ram>
    <ppia/>
    <memory>
      <map>
        <base>0000</base>
        <ram name="block0">
          <size>0400</size>
        </ram>
      </map>
      <map>
        <base>3C00</base>
        <rom>
          <content>01</content>
        </rom>
      </map>
      <map>
        <base>6000</base>
        <device name="shared_ram"/>
      </map>
      <map>
        <base>8000</base>
        <device name="video"/>
      </map>
      <map>
        <base>B000</base>
        <device name="ppia"/>
        <size>0400</size>
      </map>
      <map>
        <base>C000</base>
        <device name="Basic"/>
      </map>
      <map>
        <base>F000</base>
        <device name="Kernel"/>
      </map>
    </memory>
    <cpu>
      <device name="memory"/>
    </cpu>
    <terminal>
      <device name="video"/>
      <controller name="ppia"/>
      <scale>2.0</scale>
      <fontfilename>mc6847.bmp</fontfilename>
      <!-- refreshrate>10</refreshrate -->
      <!-- key_copy>F1</key_copy -->
      <!-- key_reset>F12</key_reset -->
    </terminal>
  </computer>

  <computer name="atom2" instantiates="minialrc.xml">
    <memory>
      <map>
        <base>4000</base>
        <device name="shared_ram"/>
      </map>
      <map>
        <base>3C00</base>
        <rom>
          <content>02</content>
        </rom>
      </map>
    </memory>
  </computer>

  <computer name="atom3" instantiates="nominalrc.xml">
    <memory>
      <map>
        <base>4000</base>
        <device name="shared_ram"/>
      </map>
      <map>
        <base>3C00</base>
        <rom>
          <content>03</content>
        </rom>
      </map>
    </memory>
  </computer>

  <computer name="atom4" clone="atom3">
    <memory>
      <map>
        <base>3C00</base>
        <rom>
          <content>04</content>
        </rom>
      </map>
    </memory>
  </computer>

</emulator>
